{
  "name": "fullstack-blog/backend",
  "description": "FullStack Blog API - Clean Architecture with PHP 8.2",
  "type": "project",
  "require": {
    "php": "^8.2",
    "vlucas/phpdotenv": "^5.5",
    "ramsey/uuid": "^4.9"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "server": "php -S localhost:8000 -t public",
    "cs-fix": "php-cs-fixer fix",
    "cs-check": "php-cs-fixer fix --dry-run --diff"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.92"
  }
}
